{
    "compilerOptions": {
        "target": "es2019",
        "module": "CommonJS",
        "outDir": "./dist",
        "sourceMap": false,
        "declaration": false,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "resolveJsonModule": false,
        "typeRoots": [
            "./node_modules/@types/"
        ]
    },
    "include": ["./src/**/*.ts", "./test/**/*.ts"],
    "compileOnSave": true
}
