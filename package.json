  "author": "Myrotvorets <support@myrotvorets.center> (https://myrotvorets.center/)",
  "license": "MIT",
  "dependencies": {
    "@bugsnag/js": "^7.5.4",
    "@myrotvorets/envalidators": "^1.3.1",
    "@myrotvorets/opentelemetry-configurator": "^1.1.2",
    "@myrotvorets/opentelemetry-plugin-knex": "^0.4.0",
    "@opentelemetry/api": "^0.14.0",
    "axios": "^0.21.1",
    "debug": "^4.3.2",
    "envalid": "^6.0.2",
    "knex": "^0.21.15",
    "knex-mariadb": "^2.0.0",
    "mariadb": "^2.5.2",
    "telegraf": "^4.0.0"
  },
  "devDependencies": {
    "@myrotvorets/eslint-config-myrotvorets-ts": "^2.2.4",
    "@types/debug": "^4.1.5",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.20",
    "@types/sqlite3": "^3.1.6",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "eslint": "^7.17.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-sonarjs": "^0.5.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "merge": "^2.1.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "sqlite3": "^5.0.0",
    "telegram-typings": "^3.6.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
