{
  "name": "myrnews-tgbot",
  "private": true,
  "version": "1.0.0",
  "description": "Myrotvorets.news Telegram Bot",
  "scripts": {
    "build": "tsc",
    "prebuild:image": "[ -x ./pre-build-image.sh ] && ./pre-build-image.sh",
    "build:image": "docker build -t myrnews-bot:latest . && docker image save myrnews-bot:latest > image.tar",
    "postbuild:image": "[ -x ./post-build-image.sh ] && ./post-build-image.sh",
    "lint": "eslint --no-eslintrc -c .eslintrc.json .",
    "lint:fix": "eslint --no-eslintrc -c .eslintrc.json --fix .",
    "prenodemon": "mkdir -p /var/lib/bot || true; knex migrate:latest --knexfile ./src/knexfile.ts",
    "nodemon": "nodemon",
    "start": "env-cmd node ./dist/index.js",
    "test": "jest",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "preversion": "npm run build && npm test"
  },
  "main": "./dist/index.js",
  "author": "Myrotvorets <support@myrotvorets.center> (https://myrotvorets.center/)",
  "license": "MIT",
  "dependencies": {
    "@bugsnag/js": "^7.3.0",
    "@myrotvorets/envalidators": "^1.1.17",
    "axios": "^0.19.2",
    "debug": "^4.1.1",
    "envalid": "^6.0.2",
    "knex": "^0.21.5",
    "mysql": "^2.18.1",
    "telegraf": "^3.38.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/jest": "^26.0.10",
    "@types/node": "^14.6.0",
    "@types/sqlite3": "^3.1.6",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "env-cmd": "^10.1.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.4.0",
    "lint-staged": "^10.2.11",
    "merge": "^1.2.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "sqlite3": "^5.0.0",
    "telegram-typings": "^3.6.1",
    "ts-jest": "^26.2.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --no-eslintrc -c .eslintrc.json --fix"
  }
}
